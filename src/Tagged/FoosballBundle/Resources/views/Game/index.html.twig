{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Game list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Person1</th>
                <th>Score1</th>
                <th>Person2</th>
                <th>Score2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('game_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.person1 }}</td>
                <td>{{ entity.score1 }}</td>
                <td>{{ entity.person2 }}</td>
                <td>{{ entity.score2 }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('game_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('game_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('game_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
